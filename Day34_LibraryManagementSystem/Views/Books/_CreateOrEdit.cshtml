@model Day34_LibraryManagementSystem.Models.Book
@{
    var authors = ViewBag.Authors as IEnumerable<Day34_LibraryManagementSystem.Models.Author> ?? new List<Day34_LibraryManagementSystem.Models.Author>();
    var genres  = ViewBag.Genres as IEnumerable<Day34_LibraryManagementSystem.Models.Genre> ?? new List<Day34_LibraryManagementSystem.Models.Genre>();
    var isEdit = Model.Id > 0;
    var postUrl = isEdit ? Url.Action("Edit") : Url.Action("Create");
}
<div class="modal-header">
  <h5 class="modal-title">@((isEdit?"Edit":"Create")) Book</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
<form id="ajaxForm" method="post" action="@postUrl">
  @if(isEdit){ <input type="hidden" name="Id" value="@Model.Id" /> }
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label class="form-label">Author</label>
   <select name="AuthorId" class="form-select">
  @foreach (var a in authors)
  {
      <option value="@a.Id" selected="@(Model.AuthorId == a.Id)">
          @a.Name
      </option>
  }
</select>

  </div>
  <div class="mb-3">
    <label class="form-label">Published On</label>
    <input name="PublishedOn" type="date" class="form-control" value="@(Model.PublishedOn?.ToString("yyyy-MM-dd") ?? "")" />
  </div>
  <div class="mb-3">
    <label class="form-label">Genres</label>
    <div class="row">
    @foreach(var g in genres)
    {
        var selected = Model.BookGenres.Any(bg => bg.GenreId == g.Id);
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="genreIds" value="@g.Id" @(selected?"checked":"") />
            <label class="form-check-label">@g.Name</label>
          </div>
        </div>
    }
    </div>
  </div>
  <div id="formError" class="text-danger"></div>
  <div class="text-end">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
</div>