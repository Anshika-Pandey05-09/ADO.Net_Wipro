@model Day33_LibraryManagement_assignment.Models.Book

<h2>Add Book</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Author</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "AuthorId", "Name"))">
            <option>Select Author</option>
        </select>
    </div>

    <div class="form-group">
        <label>Genres</label>
        <select name="selectedGenres" class="form-control" multiple>
            @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre.GenreId">@genre.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>