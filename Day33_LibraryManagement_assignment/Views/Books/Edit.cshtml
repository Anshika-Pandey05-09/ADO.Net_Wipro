@model Day33_LibraryManagement_assignment.Models.Book

<h2>Edit Book</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Author</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "AuthorId", "Name"))">
            <option>Select Author</option>
        </select>
    </div>

    <div class="form-group">
        <label>Genres</label>
        <select name="selectedGenres" class="form-control" multiple>
            @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre.GenreId" selected="@( ((List<int>)ViewBag.SelectedGenres).Contains(genre.GenreId) )">
                    @genre.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>