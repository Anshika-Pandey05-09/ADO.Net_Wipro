@model IEnumerable<Day33_LibraryManagement_assignment.Models.Genre>

<h2>Genres List</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Genre</a>
</p>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@item.Name</td>
        <td>
            <a asp-action="Details" asp-route-id="@item.GenreId">Details</a> |
            <a asp-action="Edit" asp-route-id="@item.GenreId">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
        </td>
    </tr>
}
</table>